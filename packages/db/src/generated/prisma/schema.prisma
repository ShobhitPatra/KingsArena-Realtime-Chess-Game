generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  gamesAsWhite Game[] @relation("white player")
  gamesAsBlack Game[] @relation("black player")

  createdAt DateTime @default(now())
}

model Game {
  id         String      @id @default(uuid())
  move       Move[]
  gameResult GAME_RESULT

  playerAsWhiteId String
  playerAsBlackId String

  playerAsWhite User @relation("white player", references: [id], fields: [playerAsWhiteId])
  playerAsBlack User @relation("black player", references: [id], fields: [playerAsBlackId])

  createdAt DateTime @default(now())
}

model Move {
  id         String @id @default(uuid())
  moveNumber String
  from       String
  to         String
  promotion  String

  gameId String
  game   Game   @relation(references: [id], fields: [gameId])

  createdAt DateTime @default(now())
}

enum GAME_RESULT {
  WHITE_WINS
  BLACK_WINS
  DRAW
}
